<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:padding="1dp"
        android:background="@drawable/bg_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/card_view_category_status"
        app:cardBackgroundColor="@color/bgColor"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/relative_layout_item_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        app:cardCornerRadius="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:background="@color/colorAccent"
                            android:padding="1dp"
                            android:id="@+id/circle_image_view_item_quote_user"
                            android:src="@drawable/profile"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginLeft="45dp"
                        android:paddingLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:gravity="center|left"
                            android:textColor="@color/textPrimaryColor"
                            android:id="@+id/text_view_item_quote_name_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_marginLeft="4dp"
                            android:gravity="center|right"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:tint="@color/textSecondaryColor"
                                app:srcCompat="@drawable/ic_access_time"
                                android:paddingRight="2dp"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />
                            <TextView
                                android:textSize="9dp"
                                android:id="@+id/text_view_created_item_quote"
                                android:gravity="center"
                                android:textColor="@color/textSecondaryColor"
                                android:text="2K Views"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_menu_item"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/textPrimaryColor"
                        app:srcCompat="@drawable/ic_more_vert"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"

                        android:gravity="center|left"
                        android:textSize="13dp"
                        android:id="@+id/text_view_item_quote_title"
                        android:textColor="@color/textPrimaryColor"
                        android:textStyle="bold"
                        android:text="Water stats"
                        android:layout_width="match_parent"
                        android:layout_marginRight="90dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center|left"
                        android:textSize="10dp"
                        android:id="@+id/text_view_item_quote_description"
                        android:textColor="@color/textSecondaryColor"
                        android:text="Water Wallpaper  Water Wallpaper  Water Wallpaper  Water Wallpaper "
                        android:layout_width="match_parent"
                        android:layout_marginRight="90dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:id="@+id/relative_layout_background_item_quote"
                        android:gravity="center"
                        android:background="@drawable/bg_item_quote_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_view_item_quote_status"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:padding="18dp"
                            android:textSize="12pt"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:maxLines="7"
                            android:layout_width="wrap_content"
                            android:layout_height="280dp" />
                    </RelativeLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:visibility="visible"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ic_quote"
                        android:layout_margin="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <RelativeLayout
                        android:elevation="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/relative_layout_item_quote_review"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:background="@color/yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_access_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="@string/on_review"
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:elevation="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/relative_layout_item_post_delete"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:background="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:padding="2dp"
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_delete_black"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="@string/delete"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_layout_dialog_top"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginRight="5dp"
                                android:padding="4dp"
                                android:background="@drawable/bg_status_info"
                                app:tint="@color/textSecondaryColor"
                                app:srcCompat="@drawable/ic_eye"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                            <TextView
                                android:id="@+id/text_view_views_item_quote"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:text="12k"
                                android:textColor="@color/textSecondaryColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginRight="5dp"
                                android:padding="5dp"
                                android:background="@drawable/bg_status_info"
                                app:tint="@color/textSecondaryColor"
                                app:srcCompat="@drawable/ic_share_app"
                                android:layout_width="27dp"
                                android:layout_height="27dp"/>

                            <TextView
                                android:id="@+id/text_view_downloads_item_quote"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:text="12k"
                                android:textColor="@color/textSecondaryColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/relative_layout_delete_item"
                        android:gravity="center|right"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                        <RelativeLayout
                            android:layout_marginRight="4dp"
                            android:background="@drawable/bg_status_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_delete_item_quote"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:tint="@color/textPrimaryColor"
                                app:srcCompat="@drawable/ic_cancel"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/relative_layout_fav_item_quote"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/bg_status_info"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_fav_item_quote"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:tint="@color/textPrimaryColor"
                                app:srcCompat="@drawable/ic_favorite_border_gray"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginRight="4dp"
                            android:background="@drawable/bg_status_info"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_whatsapp_item_quote"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:tint="@color/textPrimaryColor"
                                app:srcCompat="@drawable/ic_whatsapp_new"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginRight="5dp"

                            android:background="@drawable/bg_status_info"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_share_item_quote"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:tint="@color/textPrimaryColor"
                                android:padding="9dp"
                                app:srcCompat="@drawable/ic_share_new"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:background="@drawable/progress_bg_box"
                android:elevation="100dp"
                android:visibility="visible"
                android:id="@+id/relative_layout_progress_item_quote"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/image_view_icon_item_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/text_view_progress_item_quote"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="left|center"
                        android:text="Downloading : 00%"

                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="22dp" />
                    <ProgressBar
                        android:progressDrawable="@drawable/progress_bg"
                        android:progress="10"
                        android:id="@+id/progress_bar_item_quote"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_icon_item_quote"
                    android:visibility="visible"
                    android:padding="3dp"
                    android:tint="#ec008c"
                    app:srcCompat="@drawable/ic_file_download"
                    android:layout_alignParentLeft="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>